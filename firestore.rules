rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to predictions for authenticated users
    match /predictions/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Allow read access to team data for all users
    match /teams/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow read access to games data for all users
    match /games/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
